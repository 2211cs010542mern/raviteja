ex:
function greeting(a,b){
    return a+b;
  }
  let x=parseInt(prompt("Enter the value for a:"))
  let y=parseInt(prompt("Enter the value for b:"))
  let z=greeting(x,y);
  document.write("The sum of two numbers is: "+z);

